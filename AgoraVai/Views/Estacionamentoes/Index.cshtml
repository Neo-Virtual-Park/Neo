@model IEnumerable<AgoraVai.Models.Estacionamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TelaADM.cshtml";
}

<section class="section--login">
    <table class="tabela">
        <tr class="tabela--infos tabela__bold">
            @*<p>
                    @Html.ActionLink("Create New", "Create")
                </p>*@
            <th>
                @Html.DisplayNameFor(model => model.Funcionario.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gerente.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ativo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="tabela--infos">
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionario.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gerente.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.complemento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ativo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
</section>