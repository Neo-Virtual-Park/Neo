<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navegation">
        <a href="@Url.Action("Index", "Gerentes")">
            <img src="~/img/Logo.png" alt="">
        </a>
        @*@Html.ActionLink("Neo Virtual Park", "Index", "Estacionamentoes", new { area = "" }, new { @class = "white" })*@
        <ul>
            <li>@Html.ActionLink("Novo Funcionário", "Create", "CadastrarFunc", new { area = "" }, new { @class = "white" })</li>
            <li>@Html.ActionLink("Nova Vaga", "Create", "Vagas", new { area = "" }, new { @class = "white" })</li>
            <li>@Html.ActionLink("Registros", "Registros", "Gerentes", new { area = "" }, new { @class = "white" })</li>
            <li>@Html.ActionLink("Sangrias", "SangriasLista", "Gerentes", new { area = "" }, new { @class = "white" })</li>
            <li>@Html.ActionLink("Sair", "Sair", "Home", new { area = "" }, new { @class = "white" })</li>
        </ul>
    </nav>

    <main style="min-height: 90vh;">

        @RenderBody()

    </main>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
