@model IEnumerable<AgoraVai.Models.Funcionario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Movimentacao.cshtml";
}

@*<p>
    @Html.ActionLink("Create New", "Create")

</p>*@
<table class="tabela">
    <tr class="tabela--infos tabela__bold">
        <th>
            @Html.DisplayNameFor(model => model.Estacionamento.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr class="tabela--infos">
        <td>
            @Html.DisplayFor(modelItem => item.Estacionamento.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
