@model AgoraVai.Models.Vaga

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TelaGerente.cshtml";

}

<section class="section__formulario">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4 class="formulario__h4">Vaga</h4>
        <div class="formulario">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "formulario__titulo" })
            @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "formulario__input" } })
            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "formulario__titulo" })
            @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "formulario__input" } })
            @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "formulario__titulo" })
            @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "formulario__input" } })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })

            <input type="submit" value="Save" class="formulario__button" />
        </div>
    }

</section>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
