@model AgoraVai.Models.Vaga
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TelaGerente.cshtml";
}

<section class="section--login">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4 class="formulario__h4">Vagas</h4>
        <div class="form form--login">
            <div class="form--edges">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "form--paragraph" })
                @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "login--inputs" } })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>

            <div class="form--edges">
                @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "form--paragraph" })
                <input type="text" name="vv" class = "login--inputs"/>
                @*@Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "login--inputs" } })*@
                @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
            </div>

            <div class="form--edges">
                @Html.LabelFor(model => model.QuantidadeHorasEspeciais, "Quantidade de horas", htmlAttributes: new { @class = "form--paragraph" })
                @Html.EditorFor(model => model.QuantidadeHorasEspeciais, new { htmlAttributes = new { @class = "login--inputs" } })
                @Html.ValidationMessageFor(model => model.QuantidadeHorasEspeciais, "", new { @class = "text-danger" })
            </div>

            <div class="form--edges">
                @Html.LabelFor(model => model.valorHorasEspeciais, "Valor do desconto", htmlAttributes: new { @class = "form--paragraph" })
                @Html.EditorFor(model => model.valorHorasEspeciais, new { htmlAttributes = new { @class = "login--inputs" } })
                @Html.ValidationMessageFor(model => model.valorHorasEspeciais, "", new { @class = "text-danger" })
            </div>

            <div class="form--edges">
                @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "form--paragraph" })
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "login--inputs" } })
                @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
            </div>

            <div class="form--edges">
                <input type="submit" value="Criar" class="btn btn--login btn__pattern" />
            </div>
        </div>
    }

</section>

